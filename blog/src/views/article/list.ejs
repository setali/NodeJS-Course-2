<%- include("../layouts/main-top.js") %>

<div class="article-list">
  <% for (const article of items) { %>

  <div class="article">
    <div
      class="image"
      style="background-image: url('<%= article.image %>')"
    ></div>
    <div class="detail">
      <a href="/article/<%= article.id %>"> <h3><%= article.title %></h3></a>
      <p><%= article.text %></p>
    </div>
  </div>

  <% } %>
</div>

